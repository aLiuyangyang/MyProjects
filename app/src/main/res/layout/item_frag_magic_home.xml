<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/item_ircle"
    android:padding="@dimen/dp_10"
    android:elevation="@dimen/dp_4"
    android:layout_height="wrap_content">
    <ImageView
        android:background="@drawable/item_hot"
        android:id="@+id/item_home_magic_image"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_99" />
    <TextView
        android:id="@+id/item_home_magic_name"
        android:textColor="#666666"
        android:ellipsize="end"
        android:layout_toRightOf="@id/item_home_magic_image"
        android:layout_marginTop="@dimen/dp_10"
        android:text="23"
        android:paddingLeft="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/item_home_magic_image"
        android:textColor="#ff0000"
        android:text="23"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_69"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/sp_14"
        android:id="@+id/item_home_magic_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>