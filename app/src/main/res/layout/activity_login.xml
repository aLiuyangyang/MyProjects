<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_back"
    tools:context=".activity.LoginActivity"
    android:padding="@dimen/dp_10">

    <EditText
        android:id="@+id/log_phone"
        android:drawablePadding="@dimen/dp_10"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:hint="手机号"
        android:textSize="16sp"
        android:textColorHint="#fff"
        android:textColor="#FFFFFF"
        android:maxLength="11"
        android:drawableLeft="@mipmap/login_icon_phone_n_hdpi"
        android:theme="@style/MyEditText"
        />
    <EditText
        android:id="@+id/log_pass"
        android:drawablePadding="@dimen/dp_10"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_50"
        android:hint="登录密码"
        android:textSize="16sp"
        android:textColorHint="#fff"
        android:inputType="numberPassword"
        android:layout_marginTop="244dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textColor="#FFFFFF"
        android:drawableLeft="@mipmap/login_icon_lock"
        android:theme="@style/MyEditText"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_250"
        android:layout_marginTop="@dimen/dp_260"
        android:background="@mipmap/login_icon_eye"
        android:padding="@dimen/dp_7" />
    <CheckBox
        android:id="@+id/log_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="330dp"
        android:text="记住密码"
        android:textColor="#fff"
        android:textSize="14sp"
        android:theme="@style/MyEditText" />

    <TextView
        android:id="@+id/log_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/log_remember"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="快速注册"
        android:textSize="14sp"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/log_login"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/shape_button_login"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="#f00"/>
</RelativeLayout>