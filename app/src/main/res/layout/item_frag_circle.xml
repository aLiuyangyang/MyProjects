<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    android:layout_marginBottom="@dimen/dp_20"
    android:orientation="vertical"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
   <LinearLayout
       android:orientation="vertical"
       android:padding="@dimen/dp_10"
       android:background="@drawable/item_ircle"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/circle_simple_head"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/circle_simple_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_20"
            android:text="12132"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/circle_simple_time"
            android:layout_marginLeft="@dimen/dp_60"
            android:text="222"
            android:textColor="#666666"
            android:textSize="9sp"
            android:paddingTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/circle_simple_zhu"
            android:textSize="12sp"
            android:textColor="#666666"
            android:paddingLeft="@dimen/dp_10"
            android:text="2323"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/dp_280"
        android:padding="@dimen/dp_10"
        android:layout_height="@dimen/dp_280">
        <ImageView
            android:id="@+id/circle_simple_pic"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/dp_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/circle_simple_give"
            android:layout_width="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_210"
            android:background="@mipmap/common_btn_prise_n_hdpi"
            android:layout_height="@dimen/dp_20" />
        <TextView
            android:id="@+id/circle_text_give"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#666666"
            android:text="aaa"
            android:textSize="12sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
   </LinearLayout>
</LinearLayout>